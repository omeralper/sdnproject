{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./aot2",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit" : true
    }
  }
}
